<h1> Edit an Item </h1>

<%= form_with url: merchant_item_path(@merchant, @item), method: :patch, data: { turbo: false } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: @item.name %>

  <%= f.label :description %>
  <%= f.text_field :description, value: @item.description %>

  <%= f.label :unit_price %>
  <%= f.text_field :unit_price, value: @item.unit_price %>

  <%= f.label :status %>
  <%= f.text_field :status, value: @item.status %>

  <%= f.submit 'Submit' %>
<% end %>
